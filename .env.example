# Environment Variables Configuration
# Copy this file to .env.local for development or configure in Vercel for production

# ==========================================
# DATABASE
# ==========================================
# Development (local with Docker Compose):
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/damp"

# Production (Supabase - get from Dashboard → Project Settings → Database):
# Use "Connection pooling" URL for better performance with serverless
# DATABASE_URL="postgresql://postgres.xxxxx:YOUR_PASSWORD@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1"

# Direct URL (without pooling) - for migrations in production
# DIRECT_URL="postgresql://postgres:YOUR_PASSWORD@db.xxxxx.supabase.co:5432/postgres"

DATABASE_URL="postgresql://postgres:password@localhost:5432/damp"

# ==========================================
# NEXTAUTH CONFIGURATION
# ==========================================
# Generate a new secret: openssl rand -base64 32
# Or use: https://generate-secret.vercel.app/32
NEXTAUTH_SECRET="your-super-secret-key-here"

# Development:
NEXTAUTH_URL="http://localhost:3000"

# Production (update with your domain):
# NEXTAUTH_URL="https://portal.becreative.qa"

# ==========================================
# AZURE AD (Microsoft Entra)
# ==========================================
# Get these from: Azure Portal → App Registrations → Your App
AZURE_AD_CLIENT_ID="your-azure-client-id"
AZURE_AD_CLIENT_SECRET="your-azure-client-secret"
AZURE_AD_TENANT_ID="your-azure-tenant-id"

# ==========================================
# SUPABASE STORAGE
# ==========================================
# Get these from: Supabase Dashboard → Project Settings → API
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
SUPABASE_BUCKET="accreditation-photos"

# ==========================================
# APPLICATION SETTINGS
# ==========================================
# Rate limiting (15 minutes window)
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX="100"

# How long to keep activity logs (days)
ACTIVITY_RETENTION_DAYS="365"

# Backup directory (local development)
BACKUP_DIR="./backups"

# Admin emails (comma-separated)
ADMIN_EMAILS="admin@yourdomain.com"

# ==========================================
# APP BRANDING (Optional)
# ==========================================
NEXT_PUBLIC_APP_BRAND_NAME="Your Company"
NEXT_PUBLIC_APP_PRIMARY_COLOR="#1e90ff"

# ==========================================
# EMAIL/SMTP CONFIGURATION (Optional)
# ==========================================
# Development (MailHog):
SMTP_HOST="localhost"
SMTP_PORT="1025"
SMTP_USER=""
SMTP_PASS=""

# Production (configure with your SMTP provider):
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# ==========================================
# ENVIRONMENT
# ==========================================
NODE_ENV="development"
# For production: NODE_ENV="production"

# ==========================================
# NOTES
# ==========================================
# 1. NEVER commit .env.local or .env with real values
# 2. For production: Add these in Vercel Dashboard → Project Settings → Environment Variables
# 3. After adding/changing environment variables in Vercel, redeploy the application
# 4. Use different NEXTAUTH_SECRET values for development and production
